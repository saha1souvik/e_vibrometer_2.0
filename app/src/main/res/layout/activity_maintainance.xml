<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maintenance">

    <TextView
        android:id="@+id/select"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/border"
        android:fontFamily="monospace"
        android:paddingTop="15dp"
        android:text="Select part for maintainance / select frequency"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="150dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/motor"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="Motor/ 10 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select" />

            <Button
                android:id="@+id/bearings"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="Bearings/ 20 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/motor" />

            <Button
                android:id="@+id/tempControl"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="Temp Control/ 30 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bearings" />

            <Button
                android:id="@+id/FortyHz"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="40 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bearings" />

            <Button
                android:id="@+id/FiftyHz"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="50 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bearings" />

            <Button
                android:id="@+id/SixtyHz"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="60 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bearings" />

            <Button
                android:id="@+id/SeventyHz"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="70 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bearings" />

            <Button
                android:id="@+id/EightyHz"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="80 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bearings" />

            <Button
                android:id="@+id/freq"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_border"
                android:fontFamily="monospace"
                android:text="90 Hz"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tempControl"
                app:layout_constraintVertical_bias="0.084" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>