<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EquipmentType">

    <TextView
        android:id="@+id/typeOfEquipment"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/border"
        android:fontFamily="monospace"
        android:lineSpacingExtra="10sp"
        android:paddingTop="15dp"
        android:text="Select Type of Equipment"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/demo"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="monospace"
        android:text="Demo"
        android:background="@drawable/border"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeOfEquipment"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/fan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:text="Fan/Compressor"
        android:fontFamily="monospace"
        android:textSize="15dp"
        android:background="@drawable/border"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/demo" />

    <Button
        android:id="@+id/turbine"
        android:layout_width="251dp"
        android:layout_height="46dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="monospace"
        android:text="turbine"
        android:background="@drawable/border"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fan"
        app:layout_constraintVertical_bias="0.451" />


</androidx.constraintlayout.widget.ConstraintLayout>